<UserControl x:Class="BasicEUSynthFactory.PCMWaveformPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:auc="clr-namespace:BasicAudioControls;assembly=BasicAudioControls"
             mc:Ignorable="d" 
             d:DesignWidth="300" d:DesignHeight="200">
    <Canvas>
        <Rectangle Name="BaseRect" Fill="#FF1E1E9B" Width="300" Height="200"/>
        <Label Canvas.Left="15" Canvas.Top="15" Foreground="White">Waveform</Label>
        <ComboBox Name="WaveSelection" Canvas.Left="85" Canvas.Top="15" Width="40"></ComboBox>
        <auc:BasicSlider Name="OutLevel" Label="Output" Canvas.Left="215" Canvas.Top="15"></auc:BasicSlider>
        <Label Canvas.Left="15" Canvas.Top="50" Foreground="White">Pitch</Label>
        <ComboBox Name="PitchComboBox" Canvas.Top="50" Canvas.Left="85" Width="60"></ComboBox>
        <!--<Rectangle Name="WavePlace" Canvas.Top="10" Canvas.Left="130" Width="140" Height="62" Fill="Black"></Rectangle>-->
    </Canvas>
</UserControl>
